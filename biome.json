{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "node_modules",
      "dist"
    ]
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "node_modules",
      "dist"
    ],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "ignore": [
      "node_modules",
      "dist"
    ],
    "indentStyle": "tab",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "node_modules",
      "dist"
    ]
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "enabled": true,
      "trailingCommas": "all",
      "arrowParentheses": "always",
      "indentStyle": "tab",
      "indentWidth": 2,
      "quoteStyle": "single",
      "semicolons": "always"
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": false
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "tab",
      "indentWidth": 2
    },
    "linter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "tab",
      "indentWidth": 2,
      "quoteStyle": "single"
    },
    "linter": {
      "enabled": true
    }
  }
}